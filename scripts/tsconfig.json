{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "allowJs": true,
    "outDir": "./dist-ts/",
    "rootDir": "./main",
    "lib": ["es7"]
  },
  "include": ["./main/**/*"],
  "exclude": ["../node_modules", "**/*.spec.ts"]
}